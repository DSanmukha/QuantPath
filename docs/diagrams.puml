  +stock_symbol: varchar(20)
  +model_used: varchar(50)
  +parameters: JSON
  +results_json: JSON
  +created_at: timestamp
  --
  +runGBM(): Results
  +runMeanReversion(): Results
  +runJumpDiffusion(): Results
  +runGARCH(): Results
  +save(): void
  +delete(): void
  +exportCSV(): File
}

class Watchlist {
  +id: int
  +user_id: int
  +stock_symbol: varchar(20)
  +added_at: timestamp
  --
  +addStock(): void
  +removeStock(): void
  +fetchPrice(): PriceData
